{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Documentação de API - Techconnective",
    "description": "PI project: Techconnective"
  },
  "host": "localhost:3333",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API aos usuários do sistema"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/cadastro": {
      "post": {
        "tags": [
          "Usuário"
        ],
        "description": "Criar novo usuário no sistema",
        "parameters": [
          {
            "name": "Usuário",
            "in": "body",
            "description": "Usuário que será criado",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Usuário criado",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "parameters": [
        {
          "name": "userId",
          "in": "path",
          "required": true,
          "description": "ID of user that we want to find",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get user with given ID",
        "responses": {
          "200": {
            "description": "User is found",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete user with given ID",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "User is deleted",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "put": {
        "summary": "Update user with give ID",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User with new values of properties",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User is updated",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "name",
        "login",
        "password",
        "email",
        "cpf",
        "dtNasc",
        "sexo",
        "address",
        "tel",
        "location"
      ],
      "properties": {
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "login": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "cpf": {
          "type": "string",
          "uniqueItems": true
        },
        "dtNasc": {
          "type": "string"
        },
        "sexo": {
          "type": "string"
        },
        "address": {
          "cep": {
            "type": "string",
            "required": true
          },
          "logradouro": {
            "type": "string",
            "required": true
          },
          "numero": {
            "type": "string",
            "required": true
          },
          "estado": {
            "type": "string"
          },
          "cidade": {
            "type": "string",
            "required": true
          },
          "bairro": {
            "type": "string",
            "required": true
          },
          "complemento": {
            "type": "string",
            "required": false
          },
          "referencia": {
            "type": "string",
            "required": false
          }
        },
        "tel": {
          "res": {
            "type": "number"
          },
          "movel": {
            "type": "number",
            "uniqueItems": true
          }
        },
        "location": {
          "latitude": {
            "type": "number"
          },
          "longitude": {
            "type": "number"
          }
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}
